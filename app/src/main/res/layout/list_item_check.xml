<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_check_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check_price"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="1$"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/btn_check_minuse"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.15"

        android:background="#FFFFFF"
        app:srcCompat="@drawable/baseline_minimize_black_24dp" />

    <EditText
        android:id="@+id/et_check_count"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:maxLength="4"
        android:text="1"
        android:textSize="12sp" />


    <ImageButton
        android:id="@+id/btn_check_plus"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.15"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/baseline_add_black_24dp" />

    <TextView
        android:id="@+id/tv_check_total"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="12$"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

</LinearLayout>